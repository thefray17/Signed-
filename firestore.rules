rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isRoot() { return signedIn() && request.auth.token.isRoot == true; }
    function isAdmin() { return signedIn() && (request.auth.token.role == 'admin' || isRoot()); }
    function isCoadmin() { return signedIn() && request.auth.token.role == 'coadmin'; }
    function isElevated() { return isAdmin() || isCoadmin(); }

    // ---- users ----
    match /users/{uid} {
      allow read: if signedIn() && (request.auth.uid == uid || isElevated());
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if (signedIn() && request.auth.uid == uid && request.resource.data.role == resource.data.role && request.resource.data.status == resource.data.status) || isElevated();
      allow delete: if false;
    }

    // ---- offices ----
    match /offices/{officeId} {
      allow get, list: if signedIn() && (isElevated() || resource.data.visibility == "public");
      allow create, update, delete: if isElevated();
    }
    
    // ---- documents ----
    match /documents/{docId} {
      allow read: if signedIn(); // More specific rules can be added here
      allow create: if signedIn();
      allow update: if signedIn(); // More specific rules can be added here
    }

    // ---- auditLogs ----
    match /auditLogs/{logId} {
      allow read: if isElevated();
      allow list: if isElevated();
      allow write: if false; // Only backend can write
    }

    // ---- functions ----
    match /functions/getFunctionHealth {
        allow get: if isElevated();
    }
  }
}
